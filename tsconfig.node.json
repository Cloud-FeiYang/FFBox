{
	"extends": "@electron-toolkit/tsconfig/tsconfig.node.json",
	"include": ["electron.vite.config.*", "src/main/**/*", "src/common/**/*", "src/preload/*"],
	"compilerOptions": {
		"composite": true,
		"baseUrl": ".",
		"paths": {
			"@common/*": [
				"src/common/*"
			],
			"@renderer/*": [
				"src/renderer/src/*"
			],
			"@main/*": [
				"src/main/*"
			]
		}
	}
}
